  {% extends "entry.xml" %}
  {% block content %}
  <Patient>
    {{resource_id}}
    <text>
      <status value="generated"/>
      <div xmlns="http://www.w3.org/1999/xhtml">
        {% block summary -%}
        <p>{{p.fname}} {{p.lname}}</p>
        {%- endblock %}
      </div>
    </text>
    <identifier>
      <use value="usual"/>
      <label value="SMART Hospital MRN"/>
      <system value="urn:oid:0.1.2.3.4.5.6.7"/>
      <value value="{{p.pid}}"/>
    </identifier>
    <name>
      <use value="official"/>
      <family value="{{p.lname}}"/>
      <given value="{{p.fname}}"/>
      {%- if p.initial %}
      <given value="{{p.initial}}."/>
      {%- endif %}
    </name>
    {%- if p.home %}
    <telecom>
      <system value="phone"/>
      <value value="{{p.home}}"/>
      <use value="home"/>
    </telecom>
    {%- endif %}
    {%- if p.cell %}
    <telecom>
      <system value="phone"/>
      <value value="{{p.cell}}"/>
      <use value="mobile"/>
    </telecom>
    {%- endif %}
    {%- if p.email %}
    <telecom>
      <system value="email"/>
      <value value="{{p.email}}"/>
    </telecom>
    {%- endif %}
    <gender value="{{p.gender}}" />
    <birthDate value="{{p.dob}}" />
    {%- if p.street %}
    <address>
      <use value="home"/>
      <line value="{{p.street}}{{p.apartment | default('')}}"/>
      <city value="{{p.city}}"/>
      <state value="{{p.region}}"/>
      <postalCode value="{{p.pcode}}"/>
      <country value="{{p.country}}"/>
    </address>
    {%- elif p.pcode and p.country %}
    <address>
      <use value="home"/>
      <postalCode value="{{p.pcode}}"/>
      <country value="{{p.country}}"/>
    </address>
    {%- endif %}
    {%- if p.photo_title %}
    <photo>
     <contentType value="{{p.photo_code}}"/>
     <url value="/{{p.photo_binary_id}}"/>
     <!--<size value="{{p.photo_size}}"/>-->
     <hash value="{{p.photo_hash}}"/>
     <title value="{{p.photo_title}}"/>
    </photo>
    {%- endif %}
    <active value="true"/>
  </Patient>
  {% endblock %}

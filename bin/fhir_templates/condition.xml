  {% extends "entry.xml" %}
  {% block content %}
  <Condition>
  {{resource_id}}
    <text>
     <status value="generated"/>
     <div xmlns="http://www.w3.org/1999/xhtml">{{c.name}}</div>   
    </text>
    <meta>
        <security>
            <system value="http://smarthealthit.org/security/categories"/>
            <code value="problems"/>
        </security>
            <security>
                <system value="http://smarthealthit.org/security/users"/>
                <code value="{{pid}}"/>
            </security>
    </meta>
    <patient>
      <reference value="{{base_url}}{{pid}}"/>
    </patient>
    <code> 
      <coding>
        <system value="http://snomed.info/sct"/>
        <code value="{{c.snomed}}"/>
        <display value="{{c.name}}"/>
      </coding>
      <text value="{{c.name}}"/>
    </code>
   <clinicalStatus value="confirmed"/>
   <onsetDateTime value="{{c.start}}"/>
   {% if c.end %}
   <abatementDate value="{{c.end}}"/>
   {% endif %}
  </Condition>
  {% endblock %}

  {% extends "entry.xml" %}
  {% block content %}
  <Observation xmlns="http://hl7.org/fhir">
    <text>
      <status value="generated"/>
      <div xmlns="http://www.w3.org/1999/xhtml">{{bp.date}}: {{bp.systolic}}/{{bp.diastolic}} mmHg</div>
    </text>
    <name>
      <coding>
        <system value="http://loinc.org"/>
        <code value="55284-4"/>
        <display value="Blood pressure systolic and diastolic"/>
      </coding>
    </name>
    <appliesDateTime value="{{bp.date}}"/>

    <status value="final"/>

    <subject>
      <reference value="cid:patient-{{pid}}"/>
    </subject>
    <component>
      <name>
        <coding>
          <system value="http://loinc.org"/>
          <code value="8480-6"/>
          <display value="Systolic blood pressure"/>
        </coding>
      </name>
      <valueQuantity>
        <value value="{{bp.systolic}}"/>
        <units value="mm[Hg]"/>
      </valueQuantity>
    </component>
    <component>
      <name>
        <coding>
          <system value="http://loinc.org"/>
          <code value="8462-4"/>
          <display value="Diastolic blood pressure"/>
        </coding>
      </name>
      <valueQuantity>
        <value value="{{bp.diastolic}}"/>
        <units value="mm[Hg]"/>
      </valueQuantity>
    </component>
  </Observation>
  {% endblock %}

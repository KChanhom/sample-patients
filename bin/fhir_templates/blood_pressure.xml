  {% extends "entry.xml" %}
  {% block content %}
  <Observation xmlns="http://hl7.org/fhir">
    <text>
      <status value="generated"/>
      <div xmlns="http://www.w3.org/1999/xhtml">{{bp.date}}: {{bp.systolic}}/{{bp.diastolic}} mmHg</div>
    </text>
    <name>
      <coding>
        <system value="http://loinc.org"/>
        <code value="55284-4"/>
        <display value="Blood pressure systolic and diastolic"/>
      </coding>
    </name>
    <appliesDateTime value="{{bp.date}}"/>
    <status value="final"/>
    <subject>
      <reference value="cid:patient-{{pid}}"/>
    </subject>
    <related>
      <type value="has-component"/>
      <target>
        <reference value="cid:{{systolicid}}"/>
      </target>
    </related>
    <related>
      <type value="has-component"/>
      <target>
        <reference value="cid:{{diastolicid}}"/>
      </target>
    </related>
  </Observation>
  {% endblock %}

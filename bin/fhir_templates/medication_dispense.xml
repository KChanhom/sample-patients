{%- extends "entry.xml" %}
{%- block content %}
<MedicationDispense>
  {{resource_id}}
  <!--  insert contents here  -->
   <text>
    <status value="generated"/>
    <div xmlns="http://www.w3.org/1999/xhtml">
      Dispensed {{f.q}} tablets = {{f.days}} day supply of {{m.name}}
    </div>
  </text>  

  <contained>
    <Medication>
      <id value="med"/>
      <name value="{{m.name}}"/>
      <code>
	<coding>
	<system value="http://www.nlm.nih.gov/research/umls/rxnorm"/>
	  <code value="{{m.rxn}}"/>
	  <display value="{{m.name}}"/>
	</coding>
      </code>
    </Medication>
  </contained>
  
  <status value="completed"/>

  <patient>
    <reference value="{{pid}}"/>
  </patient>

  <authorizingPrescription>
    <reference value="{{medid}}"/>
  </authorizingPrescription>

  <quantity>
      <value value="{{f.q}}"/>
      <units value="tablets"/>
      <system value="http://unitsofmeasure.org"/>
      <code value="{tablets}"/>
  </quantity>

  <daysSupply>
      <value value="{{f.days}}" />
      <units value="days" />
      <system value="http://unitsofmeasure.org" />
      <code value="d" />
  </daysSupply>

  <medication>
      <reference value="#med"/>
  </medication>

  <whenHandedOver value="{{f.date}}"/>

</MedicationDispense>
{% endblock %}

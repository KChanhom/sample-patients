{%- extends "entry.xml" %}
{%- block content %}
<MedicationDispense xmlns="http://hl7.org/fhir">
  <!--  insert contents here  -->
   <text>
    <status value="generated"/>
    <div xmlns="http://www.w3.org/1999/xhtml">
      Dispensed {{f.q}} tablets = {{f.days}} day supply of {{m.name}}
    </div>
  </text>  

  <contained>
    <Medication id="med">
      <name value="{{m.name}}"/>
      <code>
	<coding>
	  <system value="http://rxnav.nlm.nih.gov/REST/rxcui"/>
	  <code value="{{m.rxn}}"/>
	  <display value="{{m.name}}"/>
	</coding>
      </code>
    </Medication>
  </contained>

  <patient>
    <reference value="{{pid}}"/>
  </patient>

  <authorizingPrescription>
    <reference value="{{medid}}"/>
  </authorizingPrescription>

  <dispense>
    <status value="completed"/>  
    <quantity>
      <value value="{{f.q}}"/>
      <units value="tablets"/>
      <system value="http://unitsofmeasure.org"/>
      <code value="{tablets}"/>
    </quantity>
    <medication>
      <reference value="#med"/>
    </medication>
    <whenHandedOver value="{{f.date}}"/>
    <extension url="http://fhir-registry.smartplatforms.org/Profile/dispense#days-supply">
       <valueQuantity>
         <value value="{{f.days}}" />
         <units value="days" />
         <system value="http://unitsofmeasure.org" />
         <code value="d" />
       </valueQuantity>
    </extension>
  </dispense>
</MedicationDispense>
{% endblock %}

{%- extends "entry.xml" %}
{%- block content %}
<MedicationPrescription>
  {{resource_id}}
  <text>
    <status value="generated"/>
    <div xmlns="http://www.w3.org/1999/xhtml">
      {{m.name}} (rxnorm: {{m.rxn}})
    </div>
  </text>

  <contained>
    <Medication>
      <id value="med"/>
      <name value="{{m.name}}"/>
      <code>
	<coding>
	<system value="http://www.nlm.nih.gov/research/umls/rxnorm"/>
	  <code value="{{m.rxn}}"/>
	  <display value="{{m.name}}"/>
	</coding>
      </code>
    </Medication>
  </contained>

  <status value="{{m.status}}" />
  <patient>
    <reference value="{{pid}}"/>
  </patient>

  <medication>
    <reference value="#med"/>
  </medication>

  <dosageInstruction>
    <scheduledTiming>
      {%- if m.freqduration %}
      <repeat>
        <bounds>
          <start value="{{m.start}}"/>
          {%- if m.end is defined and m.end != "" %}
          <end value="{{m.end}}"/>
          {% endif %}
        </bounds>
        <frequency value="{{m.freq}}"/>
        <duration value="1"/>
        <durationUnits value="{{m.freqduration}}"/>
      </repeat>
      {% endif %}
    </scheduledTiming>
    {%- if m.qtt %}
    <doseQuantity>
      <value value="{{m.qtt}}"/>
      <units value="{{m.qttunit}}"/>
      <system value="http://unitsofmeasure.org"/>
      <code value="{{m.qttunit}}"/>
    </doseQuantity>
    {% endif %}
    {%- if "prn" in m.sig %}
    <asNeededBoolean value="true"/>
    {% endif %}
    <text value="{{m.sig}}"/>
  </dosageInstruction>
  {%- if m.refills or m.q or m.days %}
  <dispense>
     {%- if m.refills %}
     <numberOfRepeatsAllowed value="{{m.refills}}"/>
     {% endif %}
     {%- if m.q %}
     <quantity>
        <value value="{{m.q}}"/>
        <units value="{{m.qttunit}}"/>
        <system value="http://unitsofmeasure.org"/>
        <code value="{{m.qttunit}}"/>
     </quantity>
     {% endif %}
     {%- if m.days %}
     <expectedSupplyDuration>
        <value value="{{m.days}}"/>
        <units value="days"/>
        <system value="http://unitsofmeasure.org"/>
        <code value="d"/>
     </expectedSupplyDuration>
     {% endif %}
  </dispense>
  {% endif %}
</MedicationPrescription>
{% endblock %}
